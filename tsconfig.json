{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "declaration": true,
        "outDir": "./dist",
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "typeRoots": [
            "./node_modules/@types"
        ],
        "baseUrl": ".",
        "paths": {
            "@libs*": ["src/libs/*", "src/libs"]
        }
    },
    "include": [
        "src",
    ],
    "exclude": [
        "**/*.test.ts",
    ],
    "ts-node": {
        // Do not forget to `npm i -D tsconfig-paths`
        "require": ["tsconfig-paths/register"]
    }
}